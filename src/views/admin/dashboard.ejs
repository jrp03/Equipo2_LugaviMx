<% layout('layout/adminLayout.ejs') %>


<link rel="stylesheet" href="/css/adminDashboard.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Barra de bienvenida fuera del header para evitar superposiciÃ³n con el logo -->
<div class="admin-welcome-bar">
  <div class="container text-center">
    <p class="admin-welcome-text">
      Bienvenido, <strong><%= user.name || 'Administrador General' %></strong> (<%= user.rol || 'Administrador' %>)
    </p>
  </div>
</div>

<div class="container py-4">
  <div class="row justify-content-center text-center g-4">
    <div class="col-md-4 col-sm-12">
      <div class="card card-stats shadow">
        <h5>Usuarios Registrados</h5>
        <span><%= totalUsuarios %></span>
        <a href="/admin/usuarios" class="btn btn-outline-dark btn-sm mt-2">
          <i class="bi bi-people"></i> Gestionar Usuarios
        </a>
      </div>
    </div>

    <div class="col-md-4 col-sm-12">
      <div class="card card-stats shadow">
        <h5>Productos Activos</h5>
        <span><%= totalProductos %></span>
        <a href="/admin/productos" class="btn btn-outline-dark btn-sm mt-2">
          <i class="bi bi-box"></i> Gestionar Productos
        </a>
      </div>
    </div>

    <div class="col-md-4 col-sm-12">
      <div class="card card-stats shadow">
        <h5>Pedidos Realizados</h5>
        <span><%= totalPedidos %></span>
        <a href="/admin/pedidos" class="btn btn-outline-dark btn-sm mt-2">
          <i class="bi bi-cart-check"></i> Ver Pedidos
        </a>
      </div>
    </div>
  </div>
</div>